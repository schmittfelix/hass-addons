#!/usr/bin/with-contenv bashio
# ==============================================================================
# Start the avahi service
# s6-overlay docs: https://github.com/just-containers/s6-overlay
# ==============================================================================

# Wait until D-Bus is available
until [[ -e /run/dbus/system_bus_socket ]];
do
  sleep 1
done

# Start the Avahi daemon
if bashio::debug; then
  exec avahi-daemon --debug --no-drop-root -f /etc/avahi/avahi-daemon.conf
else
  exec avahi-daemon --no-drop-root -f /etc/avahi/avahi-daemon.conf
fi